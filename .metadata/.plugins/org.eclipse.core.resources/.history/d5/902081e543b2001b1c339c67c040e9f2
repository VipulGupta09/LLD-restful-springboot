package com.geeks.array;

import java.util.Arrays;

public class TripletSum {

	public static void main(String[] args) {
		int arr[] = { 12, 3, 4, 1, 6, 9 };
	}

	// 1 3 4 6 9 12
	public static void findTriplet(int[] arr, int sum) {
		int i = 0, j = 1, k = 2;
		Arrays.sort(arr);
		sum -= arr[i] + arr[j] + arr[k];
	}

}
